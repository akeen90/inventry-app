{
  "brand": {
    "name": "Inventry",
    "tagline": "Professional Property Inventory Management",
    "description": "Market-leading property inventory solution for lettings professionals"
  },
  "colors": {
    "primary": {
      "blue": "#3366CC",
      "purple": "#8033CC",
      "gradient": "linear-gradient(135deg, #3366CC 0%, #8033CC 100%)"
    },
    "secondary": {
      "orange": "#FF9933",
      "green": "#33B366",
      "red": "#E64D4D"
    },
    "neutral": {
      "dark": "#26262E",
      "medium": "#666680",
      "light": "#F2F2F7",
      "white": "#FFFFFF"
    },
    "status": {
      "success": "#34C759",
      "warning": "#FFCC00",
      "error": "#FF3B30",
      "info": "#007AFF"
    },
    "gradients": {
      "primary": "linear-gradient(135deg, #3366CC 0%, #8033CC 100%)",
      "secondary": "linear-gradient(135deg, #FF9933 0%, #FF6B1A 100%)",
      "background": "linear-gradient(180deg, #FFFFFF 0%, #F2F2F7 100%)",
      "card": "linear-gradient(135deg, #FFFFFF 0%, rgba(255,255,255,0.8) 100%)"
    }
  },
  "typography": {
    "fontFamily": {
      "primary": "-apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif",
      "monospace": "'SF Mono', Monaco, 'Cascadia Code', 'Roboto Mono', Consolas, 'Courier New', monospace"
    },
    "fontSize": {
      "xs": "0.75rem",
      "sm": "0.875rem", 
      "base": "1rem",
      "lg": "1.125rem",
      "xl": "1.25rem",
      "2xl": "1.5rem",
      "3xl": "1.875rem",
      "4xl": "2.25rem",
      "5xl": "3rem"
    },
    "fontWeight": {
      "light": "300",
      "normal": "400",
      "medium": "500",
      "semibold": "600",
      "bold": "700",
      "extrabold": "800"
    },
    "lineHeight": {
      "tight": "1.25",
      "normal": "1.5",
      "relaxed": "1.75"
    }
  },
  "spacing": {
    "xs": "0.25rem",
    "sm": "0.5rem",
    "md": "1rem",
    "lg": "1.5rem",
    "xl": "2rem",
    "2xl": "3rem",
    "3xl": "4rem"
  },
  "borderRadius": {
    "none": "0",
    "sm": "0.5rem",
    "md": "0.75rem",
    "lg": "1rem",
    "xl": "1.25rem",
    "2xl": "1.5rem",
    "full": "9999px"
  },
  "shadows": {
    "sm": "0 2px 4px 0 rgba(0, 0, 0, 0.04)",
    "md": "0 2px 8px 0 rgba(0, 0, 0, 0.06)",
    "lg": "0 4px 12px 0 rgba(0, 0, 0, 0.1)",
    "xl": "0 8px 20px 0 rgba(0, 0, 0, 0.15)",
    "accent": "0 2px 8px 0 rgba(51, 102, 204, 0.2)"
  },
  "breakpoints": {
    "sm": "640px",
    "md": "768px",
    "lg": "1024px",
    "xl": "1280px",
    "2xl": "1536px"
  },
  "components": {
    "button": {
      "primary": {
        "background": "linear-gradient(135deg, #3366CC 0%, #8033CC 100%)",
        "color": "#FFFFFF",
        "borderRadius": "1rem",
        "padding": "0.75rem 1.5rem",
        "fontSize": "1rem",
        "fontWeight": "600",
        "shadow": "0 2px 8px 0 rgba(51, 102, 204, 0.2)"
      },
      "secondary": {
        "background": "#F2F2F7",
        "color": "#26262E",
        "borderRadius": "1rem",
        "padding": "0.75rem 1.5rem",
        "fontSize": "1rem",
        "fontWeight": "600",
        "shadow": "0 2px 4px 0 rgba(0, 0, 0, 0.04)"
      }
    },
    "card": {
      "standard": {
        "background": "#FFFFFF",
        "borderRadius": "1rem",
        "padding": "1.5rem",
        "shadow": "0 2px 8px 0 rgba(0, 0, 0, 0.06)",
        "border": "1px solid rgba(0, 0, 0, 0.06)"
      },
      "elevated": {
        "background": "linear-gradient(135deg, #FFFFFF 0%, rgba(255,255,255,0.8) 100%)",
        "borderRadius": "1.25rem",
        "padding": "2rem",
        "shadow": "0 4px 12px 0 rgba(0, 0, 0, 0.1)",
        "backdropFilter": "blur(10px)"
      }
    },
    "input": {
      "standard": {
        "background": "#FFFFFF",
        "borderRadius": "0.75rem",
        "padding": "0.75rem 1rem",
        "fontSize": "1rem",
        "border": "1px solid #E5E5E7",
        "shadow": "0 2px 4px 0 rgba(0, 0, 0, 0.04)"
      }
    },
    "status": {
      "success": {
        "background": "rgba(52, 199, 89, 0.15)",
        "color": "#34C759",
        "borderRadius": "9999px",
        "padding": "0.25rem 0.75rem",
        "fontSize": "0.75rem",
        "fontWeight": "600"
      },
      "warning": {
        "background": "rgba(255, 204, 0, 0.15)",
        "color": "#B8860B",
        "borderRadius": "9999px", 
        "padding": "0.25rem 0.75rem",
        "fontSize": "0.75rem",
        "fontWeight": "600"
      },
      "error": {
        "background": "rgba(255, 59, 48, 0.15)",
        "color": "#FF3B30",
        "borderRadius": "9999px",
        "padding": "0.25rem 0.75rem",
        "fontSize": "0.75rem",
        "fontWeight": "600"
      }
    }
  },
  "animations": {
    "duration": {
      "fast": "150ms",
      "normal": "300ms",
      "slow": "500ms"
    },
    "easing": {
      "ease": "cubic-bezier(0.4, 0, 0.2, 1)",
      "easeIn": "cubic-bezier(0.4, 0, 1, 1)",
      "easeOut": "cubic-bezier(0, 0, 0.2, 1)",
      "easeInOut": "cubic-bezier(0.4, 0, 0.2, 1)"
    }
  }
}